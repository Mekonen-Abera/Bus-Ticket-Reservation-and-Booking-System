const homeLink = document.getElementById('homeLink');
const ticketLink = document.getElementById('ticketLink');
const cancelationLink = document.getElementById('cancelationLink');
const paymentLink = document.getElementById('paymentLink');
const contactLink = document.getElementById('contactLink');
const loginLink = document.getElementById('loginLink');

// Add event listeners to the navigation links
homeLink.addEventListener('click', () => {
  // Redirect the user to the home page
  window.location.href = 'index.html';
});

ticketLink.addEventListener('click', () => {
  // Redirect the user to the ticket booking page
  window.location.href = 'ticket.html';
});

cancelationLink.addEventListener('click', () => {
  // Redirect the user to the ticket cancelation page
  window.location.href = 'cancelation.html';
});

paymentLink.addEventListener('click', () => {
  // Redirect the user to the payment page
  window.location.href = 'payment.html';
});

contactLink.addEventListener('click', () => {
  // Redirect the user to the contact page
  window.location.href = 'contact.html';
});

loginLink.addEventListener('click', () => {
  // Redirect the user to the login page
  window.location.href = 'login.html';
});
